<link rel="stylesheet" type="text/css" href="~/css/service/card.css" />
<link rel="stylesheet" type="text/css" href="~/css/home.css" />
@using barber_shop.Models.Enums;
@model barber_shop.Models.Service[];
@{
    ViewData["Title"] = "Home";
}

@if (TempData["ErrorDelete"] is not null)
{
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'Não é possível deletar o serviço pois o mesmo tem agendamento'
        })
    </script>
}
else if (TempData["SuccessDelete"] is not null)
{
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Serviço deletado!',
            showConfirmButton: false,
            timer: 2000
        })
    </script>
}

