@using barber_shop.Models.Enums;
@model barber_shop.Models.ViewModel.HomeViewModel;
@{
    ViewData["Title"] = "Home";
}

@if (TempData["ErroUpdateScheduling"] is not null)
{
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: '@TempData["ErroUpdateScheduling"].ToString()'
        })
    </script>
}

@if (TempData["ErrorDelete"] is not null)
{
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'Não é possível deletar o serviço pois o mesmo tem agendamento'
        })
    </script>
}
else if (TempData["SuccessDelete"] is not null)
{
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Serviço deletado!',
            showConfirmButton: false,
            timer: 2000
        })
    </script>
}

