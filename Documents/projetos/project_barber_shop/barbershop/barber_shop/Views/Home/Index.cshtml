<hr />

<div class="text-center">
    <h1 class="display-4" id="serv">Serviços</h1><!--ID SERV para tela ir até serviços-->
    <hr />
    @if (User.Identity.IsAuthenticated)
    {
        if (User.Claims.First().Value == EnumAccountCategory.ADMINISTRATOR.ToString())
        {
            <a asp-action="Register" asp-controller="Service" class="btn btn-primary" id="btn-nenhum-cadastro">Create New</a>
        }
    }
</div>

@foreach (var item in Model.Services)
{
    <div class="card" style="display: inline-block;  margin: 99px; justify-content:center">
        <div class="card-img">
            @{
                var base64 = Convert.ToBase64String(item.Image);
                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
            }
            <img src="@imgSrc" alt="img-service" style="max-width:200px; max-height:200px;">
        </div>
        <div class="card-title">@item.Name</div>
        <div class="card-subtitle"></div>
        <div class="card-footer">
            <div class="card-price"><span>R$</span>@item.Value</div>
            &nbsp;
            <button class="card-btn">
                <a asp-action="ToSchedule" asp-controller="Scheduling" class="agendar">Agendar</a>
            </button>

        </div>

        @if (User.Identity.IsAuthenticated)
        {
            if (User.Claims.First().Value == EnumAccountCategory.ADMINISTRATOR.ToString())
            {
                <div class="btnadm">
                    <a asp-action="Edit" asp-controller="Service" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                    <form asp-action="Delete" id="type" asp-controller="Service" method="post" asp-route-id="@item.Id" onsubmit="return Confirmar()">
                        <button id="btn-deletar" type="submit" class="btn btn-danger">Deletar</button>
                    </form>
                </div>
            }
        }
    </div>
}

<br />
<hr />
<div class="text-center">
    <h1 class="display-4" id="serv">Barbeiros</h1>
    <hr />
</div>

@foreach (var item in Model.Barbers)
{
    <div class="container-barber" style="display: inline-block;  margin: 94px; justify-content:center">
        <div class="card-barber">
            <div class="front">
                <div class="card-top">
                    <p class="card-top-para">Barbeiro</p>
                </div>

                <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"></path>
                    <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"></path>
                </svg>
                <p class="heading">
                    @{
                        string result;
                        var nameFormat = item.Name.Split(' ');
                        if (nameFormat.Length >= 2)
                        {
                            result = $"{nameFormat[0]} {nameFormat[1]}";
                        }
                        else
                        {
                            result = item.Name;
                        }
                    }
                    @result
                </p>
                <p class="follow">
                    Conheça-me mais...
                </p>
            </div>
            <div class="back">
                <p class="heading">Meu Perfil</p>

                <p class="follow">
                    Clique no ícone
                </p>

                <div class="icons">
                    <a asp-action="DashboardBarber" asp-controller="Dashboard" asp-route-id="@item.Id" style="text-decoration: none; color: currentColor;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"></path>
                            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"></path>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </div>
}
