@{
    ViewData["Title"] = "Incluir Foto";
}

@if (TempData["Error"] is not null)
{
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: '@TempData["Error"].ToString()'
        })
    </script>
}

<div class="container-cadastro">
    <section class="container-registro mt-3">
        <header>Incluir Foto</header>
        <form class="form-register" asp-action="AddMyPhotoToMyGallery" enctype="multipart/form-data">
            <input type="hidden" name="cpf" value="@User.Identity.Name" />

            <div class="mt-3">
                <label>Foto que será incluída</label> <br />
                <input type="file" name="Image" required>
            </div>

            <button>Incluir</button>
        </form>
    </section>
</div>

<script src="~/js/register.js"></script>