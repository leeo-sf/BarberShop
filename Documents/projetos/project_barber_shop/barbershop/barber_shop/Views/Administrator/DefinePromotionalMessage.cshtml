@model barber_shop.Models.PromotionalMessage;
<link rel="stylesheet" type="text/css" href="~/css/administrator/formMessagePromocional.css" />
<script type="text/javascript" src="~/js/messagePromotional.js"></script>

@{
    ViewData["Title"] = "Promoção";
}

@if (TempData["Error"] is not null)
{
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: '@TempData["Error"].ToString()'
        })
    </script>
}

<div class="container-message-promotional">
    <div class="container-form-message-promotional">
        <form asp-action="DefinePromotionalMessage" enctype="multipart/form-data" class="mt-4" onsubmit="return ConfirmarEnvio()">
            <div class="email-form">
                <h2>Enviar Mensagem Promocional</h2>
                <div class="form-group">
                    <label asp-for="Subject"></label>
                    <input type="text" asp-for="Subject" placeholder="Defina o assunto do e-mail..." required>
                </div>
                <div class="form-group">
                    <label asp-for="TitleEmail"></label>
                    <input id="inputTitleEmail" type="text" asp-for="TitleEmail" placeholder="Defina o título do e-mail" required onblur="InputTitleEmail()">
                </div>
                <div class="form-group">
                    <label asp-for="EmailBody"></label>
                    <textarea id="inputEmailBody" placeholder="Digite a mensagem..." required asp-for="EmailBody" onblur="InputEmailBody()"></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="Image"></label>
                    <input type="file" name="Image" />
                </div>
                <div class="form-group">
                    <button type="submit">Enviar</button>
                </div>
            </div>
        </form>
    </div>

    <div class="container-pre-view-email">
        <h2>Vizualização do e-mail a ser enviado</h2>
        <div class="email-container">
            <div class="header">
                <img src="~/cabelereiro.webp" alt="Image" style="max-width:200px; max-height:200px;">
            </div>
            <div class="content">
                <h1 id="titleEmail">Título do Email</h1>
                <p id="emailBody">Corpo do Email</p>
                <a class="cta-button">Consulte nosso site</a>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
