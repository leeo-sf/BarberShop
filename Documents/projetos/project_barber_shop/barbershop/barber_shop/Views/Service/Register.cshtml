<link rel="stylesheet" type="text/css" href="~/css/formRegister.css" />
@model barber_shop.Models.Service

@{
    ViewData["Title"] = "Criar Serviço";
}

@if (TempData["ErrorRegister"] is not null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-2 container-cadastro" id="alert-register" role="alert" heigth="100px">
        @TempData["ErrorRegister"].ToString()
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="container-cadastro">
    <section class="container-registro mt-3">
        <header>Registro de Serviço</header>
        <form class="form-register" asp-action="Register" enctype="multipart/form-data">
            <div class="input-box">
                <label asp-for="Description"></label>
                <input asp-for="Description" placeholder="Digite o nome do serviço 'Barba'">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="input-box">
                <label asp-for="Value"></label>
                <input asp-for="Value" placeholder="Digite o valor do serviço '25.15'">
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <label asp-for="Image"></label> <br />
                <input type="file" name="Image">
            </div>
            <button>Salvar</button>
        </form>
    </section>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
